# 服务端口
PORT=3000

# SMTP（发信）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# 发件人
MAIL_FROM_NAME=平台邮件
MAIL_FROM_ADDRESS=noreply@example.com

# 可选：与主项目约定的 API Key，设置后请求需带 X-Api-Key
# EMAIL_SERVICE_API_KEY=

# 163 等客户端预览区出现 ??? 时，可设为 true，发件人名与主题改为英文（正文仍为中文）
# MAIL_HEADERS_IN_ENGLISH=true
